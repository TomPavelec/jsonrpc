{
	"name": "gamee/php-jsonrpc",
	"description": "JSON-RPC toolset build on top of psr-7 (guzzlehttp), league/json-guard, league/json-reference, league/flysystem and nette/di",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Gamee",
			"email": "helloo@gameeapp.com"
		}
	],	
	"autoload": {
		"psr-4": {
			"Gamee\\JsonRPC\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gamee\\JsonRPC\\Tests\\": "tests/"
		}
	},
	"require": {
		"nette/di": "^2.4",
		"guzzlehttp/guzzle": "^6.3",
		"psr/http-message": "^1.0",
		"nette/utils": "^2.4",
		"league/json-reference": "^1.0",
		"league/json-guard": "^1.0",
		"league/flysystem": "^1.0",
		"psr/cache": "^1.0"
	},
	"require-dev": {
		"nette/tester": "^2.0",
		"mockery/mockery": "^1.0",
		"predis/predis": "^1.1",
		"phpstan/phpstan": "^0.10",
		"phpstan/phpstan-strict-rules": "^0.10",
		"slevomat/coding-standard": "^4.0",
		"gamee/php-code-checker-rules": "^1.0",
		"damejidlo/datetime-factory": "^1.1"
	},
	"scripts": {
		"tests": "php vendor/nette/tester/src/tester.php tests -C",
		"phpstan": "vendor/bin/phpstan analyse src tests -c vendor/gamee/php-code-checker-rules/phpstan.neon --level 7",
		"phpcs": "vendor/bin/phpcs --standard=vendor/gamee/php-code-checker-rules/ruleset.xml --extensions=php,phpt --tab-width=4 --ignore=temp -sp src tests",
		"phpcsfix": "vendor/bin/phpcbf --standard=vendor/gamee/php-code-checker-rules/ruleset.xml --extensions=php,phpt --tab-width=4 --ignore=temp -sp src tests"
	}
}
